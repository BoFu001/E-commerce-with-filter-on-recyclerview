<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp">



    <ImageView
        android:id="@+id/color_background_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/custom_background_selected" />

    <ImageView
        android:id="@+id/color_icon_check"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="@+id/color_background_iv"
        app:layout_constraintEnd_toEndOf="@+id/color_background_iv"
        app:layout_constraintTop_toTopOf="@+id/color_background_iv"
        app:layout_constraintBottom_toBottomOf="@+id/color_background_iv"
        app:srcCompat="@drawable/ic_check" />

    <TextView
        android:id="@+id/color_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/title"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/color_background_iv" />

    <ImageView
        android:id="@+id/color_mask_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/custom_background_ripple_white"
        app:layout_constraintStart_toStartOf="@+id/color_background_iv"
        app:layout_constraintEnd_toEndOf="@+id/color_background_iv"
        app:layout_constraintTop_toTopOf="@+id/color_background_iv"
        app:layout_constraintBottom_toBottomOf="@+id/color_background_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>